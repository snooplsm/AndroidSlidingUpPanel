<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_fragment_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <us.wmwm.happyschedule.views.ImagePagerStrip
        android:layout_below="@id/main_fragment_ad"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </us.wmwm.happyschedule.views.ImagePagerStrip>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/indicator"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout        
        android:id="@+id/fragment_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ad"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/ad_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_height"/>

</RelativeLayout>